<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="zhaopinzhActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/zhaopinzhActionBar</item>
        <item name="actionMenuTextColor">@color/android:holo_green_light</item>
        <item name="actionBarTabStyle">@style/zhaopinActionBarTabs</item>
        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>

        <item name="android:actionBarStyle">@style/zhaopinzhActionBar</item>
        <item name="android:actionMenuTextColor">@color/android:holo_green_light</item>
        <item name="android:actionBarTabStyle">@style/zhaopinActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"  parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#111111</item>
    </style>
    <!-- general styles for the action bar -->
    <!--#2d2824 @android:color/darker_gray-->
    <style name="zhaopinzhActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/my_theme_color</item>
        <item name="android:background">@color/my_theme_color</item>
        <item name="backgroundSplit">@color/my_theme_color</item>
        <item name="android:backgroundSplit">@color/my_theme_color</item>
    </style>

    <style name="zhaopinActionBarTabs"
           parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>

        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

</resources>