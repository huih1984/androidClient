<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
        <RatingBar
                android:id="@+id/occupation_growing_rating_bar"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="3"
                android:layout_gravity="center_vertical|left"
                style="@style/ZhaopinStarRatingBarBig"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="职业成长" android:layout_marginLeft="16dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
        <RatingBar
                android:id="@+id/tech_growing_rating_bar"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="3"
                android:layout_gravity="left|center_vertical"
                style="@style/ZhaopinStarRatingBarBig"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="技能成长" android:layout_marginLeft="16dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
        <RatingBar
                android:id="@+id/work_enviroment_rating_bar"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="3"
                android:layout_gravity="left|center_vertical"
                style="@style/ZhaopinStarRatingBarBig"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="工作氛围" android:layout_marginLeft="16dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
        <RatingBar
                android:id="@+id/work_press_rating_bar"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="3"
                android:layout_gravity="left|center_vertical"
                style="@style/ZhaopinStarRatingBarBig"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="工作压力" android:layout_marginLeft="16dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal">
        <RatingBar
                android:id="@+id/company_futrue_rating_bar"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                android:rating="3"
                android:layout_gravity="left|center_vertical"
                style="@style/ZhaopinStarRatingBarBig"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="公司前景" android:layout_marginLeft="16dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/web_site_txt_view"
              android:gravity="center_vertical"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mycomment_edit_text" android:layout_gravity="left|center_vertical" android:hint="请发表您的评论"
            />
</LinearLayout>