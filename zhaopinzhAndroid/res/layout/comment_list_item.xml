<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.weiyitech.zhaopinzh.util.imageview.CircularImage
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/avatar_image_view"
            android:layout_marginLeft="16dp"
            android:src="@drawable/default_avatar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/name_text_view"
            android:textColor="#9999cc"
            android:layout_toRightOf="@id/avatar_image_view"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"/>
    <RatingBar
            android:id="@+id/company_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:numStars="5"
            android:isIndicator="true"
            android:rating="4.5"
            android:layout_marginTop="2dp"
            style="@style/ZhaopinDiamondRatingBarSmall"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:id="@+id/comment_text_view"
            android:layout_toRightOf="@id/avatar_image_view"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/name_text_view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:id="@+id/time_text_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/comment_text_view" android:textColor="@android:color/secondary_text_light_nodisable"/>
</RelativeLayout>