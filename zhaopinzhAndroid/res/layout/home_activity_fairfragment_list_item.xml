<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_selector_background"
        android:focusable="false"
        android:focusableInTouchMode="false">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent" android:layout_weight="3" android:layout_gravity="center">
        <ImageView
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:id="@+id/fair_fragment_logo_image_view" android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false" android:layout_centerInParent="true"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="26dp"
                android:id="@+id/fair_fragment_new_image_view" android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" android:src="@drawable/new_2" android:padding="4dp"
                android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:id="@+id/fair_fragment_item_layout"
                  android:layout_weight="5"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:background="@android:color/transparent">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="招聘会名称"
                android:id="@+id/fair_fragment_jobfair_name_textview" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:layout_marginTop="4dp" android:textSize="18sp"
                android:typeface="monospace" android:textColor="?android:attr/textColorPrimary"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="举办场所"
                android:id="@+id/fair_fragment_hall_name_text_view" android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray" android:textSize="16sp" android:typeface="serif"
                android:visibility="gone"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已报名参会企业数："
                  android:id="@+id/fair_fragment_count_employers_text_view" android:layout_gravity="left|center_vertical"
                  android:layout_marginTop="4dp" android:textColor="@android:color/darker_gray" android:textSize="12sp"
                  android:typeface="serif"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="举办时间"
                android:id="@+id/fair_fragment_time_text_view" android:layout_marginTop="4dp" android:typeface="serif"
                android:textColor="@android:color/darker_gray" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fair_fragment_dynamic_info_text_view" android:layout_marginTop="4dp"
                android:layout_gravity="left|center_vertical" android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" android:typeface="serif"/>
    </LinearLayout>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:id="@+id/fair_fragment_navigate_image_view"
                android:layout_gravity="center"
                android:src="@drawable/forword"
                android:background="@android:color/transparent"
                >
        </ImageView>
    </LinearLayout>
</LinearLayout>