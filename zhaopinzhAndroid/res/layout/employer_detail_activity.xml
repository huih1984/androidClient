<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_board">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称"
                android:textSize="18sp"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:id="@+id/employer_detail_activity_employer_name_text_view"
                android:paddingLeft="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/employer_detail_activity_adress"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/web_site_txt_view"
                  android:gravity="center_vertical"
                  android:paddingLeft="4dp"/>
        <RelativeLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content">
            <RatingBar
                    android:id="@+id/company_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinDiamondRatingBar"/>

            <RatingBar
                    android:id="@+id/occupation_growing_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_rating_bar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinStarRatingBarSmall"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/company_rating_bar"
                      android:layout_toRightOf="@id/occupation_growing_rating_bar"
                      android:text="职业成长"
                      android:layout_marginLeft="16dp"
                      android:textSize="12dp"/>
            <RatingBar
                    android:id="@+id/tech_growing_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/occupation_growing_rating_bar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinStarRatingBarSmall"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="技能成长"
                      android:layout_below="@id/occupation_growing_rating_bar"
                      android:layout_toRightOf="@id/tech_growing_rating_bar"
                      android:textSize="12dp"
                      android:layout_marginLeft="16dp" android:id="@+id/textView"/>
            <RatingBar
                    android:id="@+id/work_enviroment_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tech_growing_rating_bar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinStarRatingBarSmall"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="工作氛围"
                      android:layout_below="@id/tech_growing_rating_bar"
                      android:layout_toRightOf="@id/work_enviroment_rating_bar"
                      android:textSize="12dp"
                      android:layout_marginLeft="16dp"/>
            <RatingBar
                    android:id="@+id/work_press_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/work_enviroment_rating_bar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinStarRatingBarSmall"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="工作压力"
                      android:layout_below="@id/work_enviroment_rating_bar"
                      android:layout_toRightOf="@id/work_press_rating_bar"
                      android:textSize="12dp"
                      android:layout_marginLeft="16dp"/>
            <RatingBar
                    android:id="@+id/company_futrue_rating_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/work_press_rating_bar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="left|center_vertical"
                    style="@style/ZhaopinStarRatingBarSmall"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="公司前景"
                      android:layout_below="@id/work_press_rating_bar"
                      android:layout_toRightOf="@id/company_futrue_rating_bar"
                      android:textSize="12dp"
                      android:layout_marginLeft="16dp"/>
            <TextView
                    android:id="@+id/comment_num"
                    android:text="24"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="12sp" android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"/>
            <ImageButton android:id="@+id/comment_btn"
                         android:layout_width="32dp"
                         android:layout_height="24dp"
                         android:background="@drawable/comment"
                         android:layout_toLeftOf="@+id/comment_num" android:layout_below="@+id/textView"
                         android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ImageView android:layout_height="1dp"
                   android:layout_width="fill_parent"
                   android:src="#009966"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司介绍"
                android:id="@+id/employer_detail_text_view" android:layout_margin="4dp"
                android:layout_gravity="center_horizontal"/>
        <com.weiyitech.zhaopinzh.util.webview.MyWebView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textSize="20sp"
                android:layout_marginRight="18sp"
                android:layout_marginLeft="18sp"
                android:minHeight="48dp"
                android:id="@+id/employer_detail_activity_item_web_view"
                android:layout_gravity="center" android:gravity="left|center_vertical"/>
    </LinearLayout>
</ScrollView>