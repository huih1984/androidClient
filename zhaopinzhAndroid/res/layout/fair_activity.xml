<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_gravity="center">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="招聘会名称"
                android:id="@+id/fair_activity_fair_name_text_view" android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" android:textSize="18sp"
                android:typeface="monospace"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍："
                android:id="@+id/fair_activity_desc_title_textview" android:layout_gravity="left|center_vertical"
                android:typeface="serif" android:textSize="16sp" android:textColor="@android:color/holo_green_light"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:id="@+id/fair_activity_desc_text_view" android:layout_gravity="center" android:textSize="14sp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="举办单位："
                android:id="@+id/fair_activity_runner_title_text_view" android:layout_gravity="left|center_vertical"
                android:textSize="16sp" android:textColor="@android:color/holo_green_light"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:id="@+id/fair_activity_runner_text_view" android:layout_gravity="center"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举办地点："
                android:id="@+id/fair_activity_hall_title_text_view" android:layout_gravity="left|center_vertical"
                android:textSize="16sp" android:textColor="@android:color/holo_green_light"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:id="@+id/fair_activity_hall_text_view" android:layout_gravity="center" android:textSize="14sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举办时间："
                android:id="@+id/fair_activity_time_title_text_view" android:layout_gravity="left|center_vertical"
                android:textSize="16sp" android:textColor="@android:color/holo_green_light"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:id="@+id/fair_activity_time_text_view" android:layout_gravity="center" android:textSize="14sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态信息："
                android:id="@+id/fair_activity_dynamic_info_title_text_view" android:layout_gravity="left|center_vertical"
                android:textSize="16sp" android:textColor="@android:color/holo_green_light"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="无"
                android:id="@+id/fair_activity_dynamic_info_text_view" android:layout_gravity="center" android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>